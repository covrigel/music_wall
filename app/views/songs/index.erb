<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">All songs</h2>
            <hr class="primary">
        </div>
    </div>
</div>
<% @songs.each do |song| %>
  <div class="song">
    <h3><a href="/songs/<%= song.id%>"><%= song.title %> </a><small>(by: <%= song.author %>)</small></h3>
    <p><a href="<%= song.link%>" target="_blank"><%= song.link%></a></p>
  </div>
<% end %>